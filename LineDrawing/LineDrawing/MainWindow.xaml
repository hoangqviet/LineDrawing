<Window x:Class="LineDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="510" Width="808" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseMove="Window_MouseMove" MouseDown="Window_MouseDown">
    <Grid>
        <Canvas Height="auto" HorizontalAlignment="Stretch" Name="canvas" VerticalAlignment="Stretch" Width="auto" Background="#00FFFFFF" MouseMove="Canvas_MouseMove"/>
        <Polyline x:Name="polyline" Stroke="DarkGreen" StrokeThickness="3"/>
    </Grid>
    
    
</Window>
